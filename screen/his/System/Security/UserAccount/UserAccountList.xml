<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.5.xsd"
        default-menu-include="false">

    <transition name="userAccountDetail"><default-response url="../UserAccountDetail"/></transition>
    <transition name="filter"><default-response url="."/></transition>
    <transition name="createUserAccount"><service-call name="org.moqui.impl.UserServices.create#UserAccount"/>
        <default-response url="."/></transition>
    <transition name="deleteUser">
        <service-call name="delete#moqui.security.UserAccount"/>
        <default-response url="."/>
    </transition>
    <actions>
        <entity-find entity-name="moqui.security.UserAccount" list="userAccountList">
            <search-form-inputs default-order-by="username"/>
        </entity-find>
    </actions>
    <widgets>
        <container-dialog id="CreateUserAccountDialog" button-text="创建新账号" width="500">
            <form-single name="CreateUserAccount" transition="createUserAccount">
            
                <field name="partyId"><default-field><hidden/></default-field></field>
                <field name="username"><default-field title="登陆账号："><text-line size="20"/></default-field></field>
                <field name="emailAddress"><default-field title="电子信箱："><text-line size="30"/></default-field></field>
                <field name="userFullName"><default-field title="真实姓名："><text-line size="30"/></default-field></field>
                <field name="newPassword"><default-field title="用户密码："><password size="15"/></default-field></field>
                <field name="newPasswordVerify"><default-field title="验证密码："><password size="15"/></default-field></field>
                <field name="requirePasswordChange"><default-field title="定期改密码"><drop-down><option key="Y"/><option key="N"/></drop-down></default-field></field>
                <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
            </form-single>
        </container-dialog>
