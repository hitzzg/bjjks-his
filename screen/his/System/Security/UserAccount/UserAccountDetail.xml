<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.5.xsd"
	default-menu-include="false" default-menu-title="帐号信息">

	<parameter name="userId" required="true" />

	<transition name="updateUserAccount">
		<service-call name="update#moqui.security.UserAccount" />
		<default-response url="." />
	</transition>
	<transition name="visitList">
		<default-response url="../../../Visit/VisitList" />
	</transition>
	<transition name="visitDetail">
		<default-response url="../../../Visit/VisitDetail" />
	</transition>

	<transition name="userGroupDetail">
		<default-response url="../../UserGroup/UserGroupDetail" />
	</transition>
	<transition name="createUserGroupMember">
		<service-call name="create#moqui.security.UserGroupMember" />
		<default-response url="." />
	</transition>
	<transition name="updateUserGroupMember">
		<service-call name="update#moqui.security.UserGroupMember" />
		<default-response url="." />
	</transition>

	<transition name="createUserPreference">
		<service-call name="create#moqui.security.UserPreference" />
		<default-response url="." />
	</transition>
	<transition name="updateUserPreference">
		<service-call name="update#moqui.security.UserPreference" />
		<default-response url="." />
	</transition>

	<transition name="releaseTarpitNow">
		<service-call name="update#moqui.security.ArtifactTarpitLock"
			in-map="[artifactTarpitLockId:artifactTarpitLockId, releaseDateTime:ec.user.nowTimestamp]" />
		<default-response url="." />
	</transition>

	<actions>
		<entity-find-one entity-name="moqui.security.UserAccount"
			value-field="userAccount" />

		<!-- TODO: limit to locales for tenant -->
		<set field="localeStringList" from="[]" />
		<iterate list="Locale.getAvailableLocales()" entry="lcl">
			<script>localeStringList.add([locale:lcl.toString(), name:lcl.getDisplayName()])</script>
		</iterate>
		<order-map-list list="localeStringList">
			<order-by field-name="name" />
		</order-map-list>

		<entity-find entity-name="moqui.security.UserGroupMember"
			list="ugmList">
			<econdition field-name="userId" />
			<order-by field-name="userGroupId" />
		</entity-find>

		<entity-find entity-name="moqui.security.UserPreference"
			list="upList">
			<econdition field-name="userId" />
			<order-by field-name="preferenceKey" />
		</entity-find>

		<entity-find entity-name="moqui.security.UserLoginHistory"
			list="historyList" limit="5">
			<search-form-inputs default-order-by="-fromDate" />
			<econdition field-name="userId" />
		</entity-find>

		<entity-find entity-name="moqui.security.ArtifactTarpitLock"
			list="artifactTarpitLockList" limit="20">
			<econdition field-name="userId" />
			<order-by field-name="-releaseDateTime" />
		</entity-find>
		<entity-find-count entity-name="moqui.security.ArtifactTarpitLock"
			count-field="allTarpitLocksCount">
			<econdition field-name="userId" />
		</entity-find-count>
	</actions>
	<widgets>
		<!-- TODO: update password form? or better not to allow here? -->
		<container-row>
			<row-col lg="5">
				<container-box>
					<box-header>
						<label text="帐号信息" type="h5"/>
					</box-header>
					<box-toolbar>
					<link url="visitList" text="访问记录" parameter-map="[userId:userId]"/>					
					</box-toolbar>
					<box-body>
						<form-single name="UserAccountForm" map="userAccount"
							transition="updateUserAccount">
							<field name="userId">
								<default-field>
									<hidden />
								</default-field>
							</field>
							<field name="username">
								<default-field title="帐号：">
									<text-line size="20" />
								</default-field>
							</field>
							<field name="emailAddress">
								<default-field title="电子信箱：">
									<text-line size="20" />
								</default-field>
							</field>
							<field name="userFullName">
								<default-field title="姓名：">
									<text-line size="20" />
								</default-field>
							</field>

							<!-- <field name="passwordSetDate"><default-field title="密码修改时间："><display/></default-field></field> -->
							<field name="requirePasswordChange">
								<default-field title="定期修改密码：">
									<drop-down allow-empty="true" style="width: 80%;">
										<option key="Y" />
										<option key="N" />
									</drop-down>
								</default-field>
							</field>
							<!-- <field name="successiveFailedLogins"><default-field title="登录失败次数："><display/></default-field></field> -->
							<field name="disabled">
								<default-field title="是否已停用：">
									<drop-down allow-empty="true" style="width: 80%;">
										<option key="Y" />
										<option key="N" />
									</drop-down>
								</default-field>
							</field>
							<!-- <field name="disabledDateTime"><default-field title="停用时间："><display/></default-field></field> -->

							<field name="locale">
								<default-field title="所在地区：">
									<drop-down allow-empty="true" style="width: 80%;">
										<list-options list="localeStringList" key="${locale}"
											text="${name}" />
									</drop-down>
								</default-field>
							</field>
							<field name="timeZone">
								<default-field title="时区：">
									<!-- TODO: limit time zones to tenant zones -->
									<drop-down allow-empty="true" style="width: 100%;">
										<list-options
											list="new TreeSet(TimeZone.getAvailableIDs().collect())" />
									</drop-down>
								</default-field>
							</field>

							<field name="submitButton">
								<default-field title="Update">
									<submit />
								</default-field>
							</field>
						</form-single>

					</box-body>
				</container-box>
			</row-col>
			<row-col lg="7">
				<container-box>
					<box-header>
						<label text="组管理" type="h5"/>
					</box-header>
					<box-toolbar>
						<container-dialog id="AddGroupMemberDialog"
							button-text="添加组" width="550">
							<form-single name="CreateUserGroupMember" transition="createUserGroupMember">
								<field name="userId">
									<default-field>
										<hidden />
									</default-field>
								</field>
								<field name="userGroupId">
									<default-field title="组ID：">
										<drop-down style="width: 280px">
											<entity-options key="${userGroupId}"
												text="${description} [${userGroupId}]">
												<entity-find entity-name="moqui.security.UserGroup">
													<order-by field-name="description" />
												</entity-find>
											</entity-options>
										</drop-down>
									</default-field>
								</field>
								<field name="fromDate" entry-name="ec.user.nowTimestamp">
									<default-field title="开始时间：">
										<date-time />
									</default-field>
								</field>
								<field name="submitButton">
									<default-field title="Add">
										<submit />
									</default-field>
								</field>
							</form-single>
						</container-dialog>
					</box-toolbar>
					<box-body>
						<form-list name="UserGroupList" list="ugmList"
							transition="updateUserGroupMember">
							<field name="userId">
								<default-field>
									<hidden />
								</default-field>
							</field>
							<field name="userGroupId">
								<default-field title="组名">
									<display-entity entity-name="moqui.security.UserGroup" />
									<link url="userGroupDetail" text="${userGroupId}"
										link-type="anchor" />
								</default-field>
							</field>
							<field name="fromDate">
								<header-field show-order-by="true" title="开始时间" />
								<default-field>
									<display />
								</default-field>
							</field>
							<field name="thruDate">
								<header-field show-order-by="true" title="结束时间" />
								<default-field>
									<date-time/>
								</default-field>
							</field>
							<field name="submitButton">
								<default-field title="Update">
									<submit />
								</default-field>
							</field>
						</form-list>
					</box-body>
				</container-box>

