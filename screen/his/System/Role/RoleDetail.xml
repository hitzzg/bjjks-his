<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.5.xsd"
	default-menu-include="false" default-menu-title="角色信息" standalone="true">
	<transition name="updateRoleType">
		<service-call name="update#mantle.party.RoleType" />
		<default-response url=".."/>
	</transition>
	<actions>
		<entity-find-one auto-field-map="true" value-field="roleDetail"
			entity-name="mantle.party.RoleType">
		</entity-find-one>


	</actions>
	<widgets>
		<form-single name="roleType" transition="updateRoleType">

			<field name="roleTypeId">
				<default-field>
					<display />
				</default-field>
			</field>
			<field name="parentTypeId">
				<default-field>
					<drop-down allow-empty="true" search="true">
						<entity-options key="${roleTypeId}" text="${description}">
							<entity-find entity-name="mantle.party.RoleType">
								<econdition field-name="roleTypeId" operator="not-equals"
									from="roleTypeId" />
							</entity-find>
						</entity-options>
					</drop-down>
				</default-field>
			</field>
			<field name="description">
				<default-field>
					<text-line default-value="${roleDetail.description}" />
				</default-field>
			</field>

			<field name="submitButton">
				<default-field title="Update">
					<submit />
				</default-field>
			</field>
		</form-single>


	</widgets>

</screen>
