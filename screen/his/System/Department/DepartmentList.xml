<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.5.xsd"
	default-menu-title="部门列表" default-menu-include="false">
	<transition name="createDepartment">
		<service-call name="mantle.party.PartyServices.create#Organization" />
		<default-response url="." />
	</transition>
	<actions>
		<entity-find entity-name="mantle.party.Organization" list="organizationList"
					 limit="10">
			<search-form-inputs default-order-by="partyId"/>
		</entity-find>
	</actions>
	<widgets>
		<container-dialog id="CreateDepartmentDialog"
			button-text="创建新部门" width="400">
			<form-single name="CreateDepartment" transition="createDepartment">
                <field name="partyId"><default-field title="部门编码："><text-line size="20"/></default-field></field>
                <field name="organizationName"><default-field title="部门名称："><text-line size="20"/></default-field></field>
                <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
			</form-single>
		</container-dialog>

		<form-list name="OrganizationList" list="organizationList"
			skip-form="true">
			<field name="partyId">
				<header-field title="PartyId" show-order-by="true"><!-- <text-find 
						size="10" hide-options="true"/> -->
				</header-field>
				<default-field>
					<display />
				</default-field>
			</field>
			<field name="organizationName">
				<header-field title="OrganizationName" show-order-by="true"><!-- <text-find 
						size="10" hide-options="true"/> -->
				</header-field>
				<default-field>
					<display />
				</default-field>
			</field>			
		</form-list>
	</widgets>
</screen>
